#!/usr/bin/env ruby

require 'thor'
require 'these-damn-photos'

class TDPhotos < Thor

  option :storage
  desc 'scan PATH for new photos'
  def scan(path)
    TheseDamnPhotos::Collector.storage_path = options[:storage]
    scanner = TheseDamnPhotos::Scanner.new
    scanner.scan(path)
  end
end

TDPhotos.start(ARGV)
